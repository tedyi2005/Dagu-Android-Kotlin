<resources>
    <!--The base for all text view-->
    <style name="ShakeShackTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ShakeShackTextView.HeroMobile">
        <item name="android:textAppearance">?attr/textAppearanceHeadline1</item>
        <item name="lineSpacing">@dimen/size_10dp</item>
        <item name="fontFamily">@font/futura_lt_pro_bold</item>
        <item name="fontWeight">700</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShakeShackTextView.HeroMobile.Black">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ShakeShackTextView.HeroMobile.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ShakeShackTextView.HeadingH1">
        <item name="android:textAppearance">?attr/textAppearanceHeadline2</item>
        <item name="fontFamily">@font/futura_lt_pro_bold</item>
        <item name="fontWeight">700</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShakeShackTextView.HeadingH2">
        <item name="android:textAppearance">?attr/textAppearanceHeadline3</item>
        <item name="fontFamily">@font/futura_lt_pro_bold</item>
        <item name="fontWeight">700</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShakeShackTextView.HeadingH3">
        <item name="android:textAppearance">?attr/textAppearanceHeadline4</item>
        <item name="fontFamily">@font/futura_lt_pro_bold</item>
        <item name="fontWeight">700</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">-0.05</item>
    </style>

    <style name="ShakeShackTextView.HeadingH3.Link">
        <item name="android:background">@drawable/selector_underline_pressed</item>
    </style>

    <style name="ShakeShackTextView.BodyNormal">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <style name="ShakeShackTextView.BodyNormal.Grey">
        <item name="android:textColor">@color/grey_500</item>
    </style>

    <style name="ShakeShackTextView.BodyNormal.Grey.Link">
        <item name="android:background">@drawable/selector_underline_pressed</item>
    </style>

    <style name="ShakeShackTextView.BodyNormal.Grey.Bold">
        <item name="android:textColor">@color/grey_500</item>
        <item name="fontWeight">700</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShakeShackTextView.BodyNormal.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ShakeShackTextView.BodyNormal.ErrorOnWhite">
        <item name="android:textColor">@color/error_on_white</item>
    </style>

    <style name="ShakeShackTextView.BodyNormal.Bold">
        <item name="fontFamily">@font/futura_lt_pro_bold</item>
        <item name="fontWeight">700</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">-0.05</item>
    </style>

    <style name="ShakeShackTextView.BodyNormal.Bold.Link">
        <item name="android:background">@drawable/selector_underline_pressed</item>
    </style>

    <style parent="ShakeShackTextView.BodyNormal.Bold.Link" name="ShakeShackTextView.BodyNormal.Bold.Link.External">
        <item name="android:drawableEnd">@drawable/ic_external_link</item>
        <item name="android:drawablePadding">@dimen/size_10dp</item>
    </style>

    <style parent="ShakeShackTextView.BodyNormal.Bold.Link" name="ShakeShackTextView.BodyNormal.Bold.Link.Download">
        <item name="android:drawableEnd">@drawable/ic_download</item>
        <item name="android:drawablePadding">@dimen/size_10dp</item>
    </style>

    <style name="ShakeShackTextView.BodySmall">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="ShakeShackTextView.BodySmall.Grey">
        <item name="android:textColor">@color/grey_500</item>
    </style>

    <style name="ShakeShackTextView.BodySmall.Bold">
        <item name="fontFamily">@font/futura_lt_pro_bold</item>
        <item name="fontWeight">700</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShakeShackTextView.BodyExtraSmall">
        <item name="android:textAppearance">?attr/textAppearanceCaption</item>
    </style>

    <style name="ShakeShackTextView.BodyExtraSmall.Clickable">
        <item name="android:background">@drawable/selector_generic_underline_pressed_black</item>
    </style>

    <style name="ShakeShackTextView.BodyExtraSmall.Bold">
        <item name="fontFamily">@font/futura_lt_pro_bold</item>
        <item name="fontWeight">700</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShakeShackTextView.BodyExtraSmall.Bold.Clickable">
        <item name="android:background">@drawable/selector_generic_underline_pressed_black</item>
    </style>

    <style name="ShakeShackTextView.GreenRounded">
        <item name="android:textSize">@dimen/ss_body_normal_text_size</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--region MaterialAlertDialog styles -->
    <style name="ShakeShackAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.Text</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.Text.Title</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogButtonStyle</item>
        <item name="shapeAppearanceOverlay">@style/AlertDialogShapeAppearanceOverlay</item>
    </style>

    <style name="MaterialAlertDialog.Text" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:textSize">@dimen/ss_body_normal_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/futura_lt_pro_medium</item>
        <item name="android:fontFamily">@font/futura_lt_pro_medium</item>
    </style>

    <style name="MaterialAlertDialog.Text.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">@dimen/ss_heading_h1_text_size</item>
        <item name="fontFamily">@font/futura_lt_pro_bold</item>
        <item name="android:fontFamily">@font/futura_lt_pro_bold</item>
    </style>

    <style name="AlertDialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">0dp</item>
        <item name="textAllCaps">true</item>
        <item name="backgroundTint">@color/white</item>
        <item name="fontWeight">700</item>
        <item name="fontFamily">@font/futura_lt_pro_bold</item>
    </style>

    <style name="AlertDialogShapeAppearanceOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/size_5dp</item>
    </style>
    <!--endregion-->

    <!--The base for all buttons-->
    <style name="ShakeShackButton" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">@dimen/ss_button_min_height</item>
        <item name="android:elevation">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/regular_button_text_selector</item>
        <item name="backgroundTint">@color/regular_button_bg_selector</item>
        <item name="strokeColor">@color/regular_button_stroke_selector</item>
        <item name="strokeWidth">@dimen/size_2dp</item>
        <item name="iconTint">@color/white</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="ShakeShackButton.Black">
        <item name="android:textAppearance">?attr/textAppearanceCaption</item>
        <item name="android:textColor">@color/black_button_text_selector</item>
        <item name="backgroundTint">@color/black_button_bg_selector</item>
        <item name="strokeColor">@color/black_button_stroke_selector</item>
        <item name="fontFamily">@font/futura_lt_pro_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ShakeShackButton.Black.Bold">
        <item name="fontFamily">@font/futura_lt_pro_bold</item>
        <item name="fontWeight">700</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShakeShackButton.White">
        <item name="android:textAppearance">?attr/textAppearanceCaption</item>
        <item name="android:textColor">@color/white_button_text_selector</item>
        <item name="backgroundTint">@color/white_button_bg_selector</item>
        <item name="strokeColor">@color/white_button_stroke_selector</item>
        <item name="rippleColor">@color/grey_500</item>
        <item name="fontFamily">@font/futura_lt_pro_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ShakeShackButton.White.SmallNoShadow">
        <item name="android:stateListAnimator">@null</item> <!-- Removes a layer of shadow-->
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white_button_text_selector</item>
        <item name="android:backgroundTint">@color/white_button_bg_selector</item>
    </style>

    <style name="ShakeShackButton.White.Bold">
        <item name="fontFamily">@font/futura_lt_pro_bold</item>
        <item name="fontWeight">700</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShakeShackButton.Text">
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="fontFamily">@font/futura_lt_pro_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ShakeShackButton.Text.Bold">
        <item name="fontFamily">@font/futura_lt_pro_bold</item>
        <item name="fontWeight">700</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--region RadioButton styles -->
    <style name="ShakeShackRadioButtonText" parent="TextAppearance.ShakeShack.Caption">
        <item name="android:textColor">@color/grey_500</item>
        <item name="fontFamily">@font/futura_lt_pro_medium</item>
    </style>

    <style name="ShakeShackRadioButtonText.Bold" parent="TextAppearance.ShakeShack.Caption">
        <item name="android:textColor">@color/black</item>
        <item name="fontWeight">700</item>
        <item name="fontFamily">@font/futura_lt_pro_bold</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--endregion-->

    <!--region TextInputLayout styles -->
    <style name="BlackCursorForFocusedTextInputLayout"> <!-- Workaround for cursor color -->
        <item name="colorControlActivated">@color/black</item> <!-- Cursor color -->
    </style>

    <style name="ShakeShackTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@null</item> <!-- Removes default background -->
        <item name="android:textColorHint">@color/grey_500</item> <!-- Hint color - Not focused -->
        <item name="errorTextColor">@color/error_on_white
        </item> <!-- Hint color + Error text color - Error state -->
        <item name="hintTextColor">@color/grey_500</item> <!-- Hint color - Focused -->
        <item name="boxStrokeColor">@color/text_input_underline_selector
        </item> <!-- Underline color - No error state -->
        <item name="boxStrokeErrorColor">@color/error_on_white
        </item> <!-- Underline color - Error state -->
        <item name="boxStrokeWidthFocused">@dimen/size_1dp</item> <!-- Underline width - Focused -->
        <item name="android:theme">@style/BlackCursorForFocusedTextInputLayout
        </item> <!-- Workaround for cursor color -->
        <item name="errorIconDrawable">@null</item>
    </style>
    <!--endregion-->

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_5dp</item>
        <item name="android:background">@drawable/divider_with_margins</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Bottom Sheet styles -->
    <style name="SSRoundedShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="SSBottomSheetDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/SSBottomSheetStyle</item>
    </style>

    <style name="SSBottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/SSRoundedShapeAppearanceBottomSheetDialog</item>
    </style>

    <!-- Chip styles -->
    <style name="ShakeShackChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_bg_color_selector</item>
        <item name="chipStrokeColor">@color/black</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStartPadding">@dimen/size_18dp</item>
        <item name="chipEndPadding">@dimen/size_18dp</item>
        <item name="chipSpacingHorizontal">@dimen/size_2dp</item>
        <item name="chipSpacingVertical">@dimen/size_2dp</item>
        <item name="chipMinHeight">@dimen/size_48dp</item>
        <item name="android:textAppearance">@style/SSChipTextAppearance</item>
        <item name="android:textColor">@color/chip_text_color_selector</item>
    </style>

    <style name="SSChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">@dimen/ss_body_extra_small_text_size</item>
        <item name="fontWeight">700</item>
        <item name="fontFamily">@font/futura_lt_pro_bold</item>
        <item name="android:fontFamily">@font/futura_lt_pro_bold</item>
    </style>

    <style name="ShakeShakeTabTextAppearance" parent="TextAppearance.ShakeShack.Body2">
        <item name="android:textSize">@dimen/size_15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TrayDetailAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_left</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_right</item>
    </style>

</resources>
