<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base theme, all common styling here -->
    <style name="Base.ShakeShack" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Material shape attributes -->
        <item name="shapeAppearanceSmallComponent">
            @style/ShapeAppearance.ShakeShack.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.ShakeShack.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">
            @style/ShapeAppearance.ShakeShack.LargeComponent
        </item>

        <item name="materialAlertDialogTheme">
            @style/ShakeShackAlertDialogTheme
        </item>

        <!-- Material type attributes -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.ShakeShack.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.ShakeShack.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.ShakeShack.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.ShakeShack.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.ShakeShack.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.ShakeShack.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.ShakeShack.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.ShakeShack.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.ShakeShack.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.ShakeShack.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.ShakeShack.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.ShakeShack.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.ShakeShack.Overline</item>

        <!-- Fonts -->
        <item name="fontFamily">@font/futura_lt_pro_medium</item>
        <item name="android:fontFamily">@font/futura_lt_pro_medium</item>

        <item name="colorPrimarySurfaceVariant">?attr/colorSurface</item>

        <item name="bottomSheetStyle">@style/SSBottomSheetStyle</item>
        <item name="bottomSheetDialogTheme">@style/SSBottomSheetDialogTheme</item>
        <item name="android:textViewStyle">@style/ShakeShackTextView</item>
        <item name="chipStyle">@style/ShakeShackChip</item>
        <item name="materialButtonStyle">@style/ShakeShackButton</item>
    </style>

    <style name="ShakeShack" parent="@style/Base.ShakeShack" />

    <style name="ShakeShack.Main">
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryDark">@color/grey_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/primary_green</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="shakeShackIconTint">@color/black</item>
        <item name="shakeShackLogo">@drawable/ic_vector_home_logo_green_burger_black_text</item>
        <item name="shakeShackAlternativeBg">@color/grey_50</item>
    </style>

    <style name="ShakeShack.Main.Translucent">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:statusBarColor">@color/transparent</item>
    </style>

    <style name="ThemeOverlay.ShakeShack.Main" parent="@style/ThemeOverlay.MaterialComponents.Light" >
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/grey_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/primary_green</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="ThemeOverlay.ShakeShack.Main.Dark" parent="@style/ThemeOverlay.MaterialComponents.Dark" />


</resources>