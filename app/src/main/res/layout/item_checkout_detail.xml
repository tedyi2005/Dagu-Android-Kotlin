<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_20dp">

    <TextView
        android:id="@+id/checkout_item_title"
        style="@style/ShakeShackTextView.BodySmall.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/size_10dp"
        android:text="1x ShackBurger"
        app:drawableEndCompat="@drawable/ic_chevron_right_gray"
        app:drawableTint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/checkout_item_description"
        style="@style/ShakeShackTextView.BodySmall.Grey"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="700 cals â€¢ Double, Extra bacon, more stuff"
        app:layout_constraintEnd_toStartOf="@id/checkout_item_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkout_item_title" />

    <TextView
        android:id="@+id/checkout_item_price"
        style="@style/ShakeShackTextView.BodySmall.Grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$10.19"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>