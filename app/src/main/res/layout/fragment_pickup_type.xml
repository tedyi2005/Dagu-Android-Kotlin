<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/size_20dp"
    android:layout_marginEnd="@dimen/size_20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/close_btn"
            android:layout_width="@dimen/size_32dp"
            android:layout_height="@dimen/size_32dp"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/size_30dp"
            android:layout_marginBottom="@dimen/size_20dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/close_button_description"
            android:src="@drawable/ic_close" />

        <TextView
            android:id="@+id/pickup_type_title_textView"
            style="@style/ShakeShackTextView.HeadingH2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pickup_type_title" />

        <TextView
            android:id="@+id/pickup_type_subTitle_textView"
            style="@style/ShakeShackTextView.BodyNormal.Grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_15dp"
            android:text="@string/pickup_type_sub_title" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pickup_type_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_20dp" />

        <com.google.android.material.button.MaterialButton
            style="@style/ShakeShackButton.White.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="@dimen/size_15dp"
            android:paddingTop="@dimen/size_15dp"
            android:paddingBottom="@dimen/size_15dp"
            android:text="@string/change_location"
            android:textAllCaps="true"
            android:id="@+id/pickup_change_location_button"
            android:textSize="18sp" />
    </LinearLayout>


</androidx.core.widget.NestedScrollView>