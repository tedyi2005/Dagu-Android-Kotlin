<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/size_20dp"
    android:layout_marginTop="@dimen/size_30dp"
    android:layout_marginEnd="@dimen/size_20dp">


    <TextView
        android:id="@+id/car_detail_title_textView"
        style="@style/ShakeShackTextView.HeadingH2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_15dp"
        android:text="@string/pickup_type_title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/car_detail_subTitle_textView"
        style="@style/ShakeShackTextView.BodyNormal.Grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_15dp"
        android:text="@string/pickup_type_sub_title"
        app:layout_constraintTop_toBottomOf="@id/car_detail_title_textView" />

    <TextView
        android:id="@+id/car_detail_color_textView"
        style="@style/ShakeShackTextView.BodyNormal.Grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_15dp"
        android:text="@string/car_color"
        app:layout_constraintTop_toBottomOf="@id/car_detail_subTitle_textView" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/car_detail_color_edit_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/size_5dp"
        android:focusableInTouchMode="false"
        android:inputType="none"
        app:layout_constraintTop_toBottomOf="@id/car_detail_color_textView" />

    <TextView
        android:id="@+id/car_detail_type_textView"
        style="@style/ShakeShackTextView.BodyNormal.Grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_25dp"
        android:text="@string/car_type"
        app:layout_constraintTop_toBottomOf="@id/car_detail_color_edit_text" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/car_detail_type_edit_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/size_5dp"
        android:focusableInTouchMode="false"
        android:inputType="none"
        app:layout_constraintTop_toBottomOf="@id/car_detail_type_textView" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/start_order_button"
        style="@style/ShakeShackButton.Text.Bold"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/size_20dp"
        android:layout_marginBottom="@dimen/size_40dp"
        android:enabled="false"
        android:paddingTop="@dimen/size_15dp"
        android:paddingBottom="@dimen/size_15dp"
        android:text="@string/start_order"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>